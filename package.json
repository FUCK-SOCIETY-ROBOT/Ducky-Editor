{
  "name": "ducky-editor",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "build": "electron-builder --win nsis"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.1.0"
  },
  "build": {
    "appId": "com.example.duckyeditor",
    "productName": "Ducky Editor",
    "files": [
      "editor.html",
      "main.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "installerIcon": "icon.ico"
    }
  }
}
